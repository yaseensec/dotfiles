/* Message Dialog */

@import "styles/mycolors.rasi"

* {
    background-color:       @al;
    text-color:             @red1;
	font:				 	"FantasqueSansMono Nerd Font 12";
}

window {
    width:      			360px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @red1;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@red1;
}
